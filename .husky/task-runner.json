{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "dotnet format",
      "command": "dotnet",
      "args": ["format", "--verify-no-changes", "--include", "${staged}"],
      "pathMode": "absolute"
    },
    {
      "name": "eslint",
      "command": "npx",
      "args": [
        "--prefix",
        "Web",
        "eslint",
        "--config",
        "Web/eslint.config.mjs",
        "${staged}"
      ],
      "include": ["Web/**"],
      "pathMode": "absolute"
    },
    {
      "name": "prettier",
      "command": "npx",
      "args": [
        "--prefix",
        "Web",
        "prettier",
        "--ignore-unknown",
        "--config",
        "Web/.prettierrc",
        "--check",
        "${staged}"
      ],
      "include": ["Web/**"],
      "pathMode": "absolute"
    }
  ]
}
